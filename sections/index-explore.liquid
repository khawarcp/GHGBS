<section class="explore">
    <div class="container">
        <div class="explore-cntnt">
            {% if section.settings.heading != blank %}                
                <h2> {{ section.settings.heading }} </h2>
            {% endif %}
            <div class="explore-card flex justify-between gap-32">
                {% if section.settings.collection_1 != blank %}
                    {% assign collection = collections[section.settings.collection_1] %}
                    {% assign collection_url = section.settings.button_url_1 | default: collection.url %}
                <div class="grinder">
                    <h3> {{ collection.title }} </h3>
                    <div class="grinder-dta flex gap-24">
                        <a href="{{ collection_url }}" class="grinder-img">
                            {% if section.settings.show_custom_image_1 %}
                                {% render 'image-snippet', image: section.settings.collection_image_1, lazyload: 'lazy', width: '332', height: '292' %}
                            {% else %}
                                {% render 'image-snippet', image: collection.image, lazyload: 'lazy', width: '332', height: '292' %}
                            {% endif %}
                        </a>
                        <div class="grinder-text">
                            {% if section.settings.show_custom_text_1 != blank %}
                                {{ section.settings.show_custom_text_1 }}
                            {% else %}
                               {{ collection.description }}
                            {% endif %}

                            <div class="grinder-opt flex gap-32">
                                {% for block in section.blocks %}
                                    {% case block.type %}
                                           {% when 'feature' %}
                                            {% if block.settings.text != blank %}                                                
                                                <div class="grinder-opt-1 flex align-center">
                                                    {% render 'image-snippet-np', image: 'seting.svg' , assetURL: true, lazyload: 'lazy'  %}
                                                    <p> {{ block.settings.text }} </p>
                                                </div>
                                            {% endif %}
                                 {% endcase %}
                             {% endfor %}                               
                            </div>

                            {% render 'anchor-snippet', image: true, button_text: section.settings.button_text_1, button_url: section.settings.button_url_1 | default: collection.url, class: 'btn-primary flex align-center justify-center gap-10' %}
                        </div>
                    </div>
                </div>
                {% endif %}
                
                {% if section.settings.collection_2 != blank %}
                    {% assign collection = collections[section.settings.collection_2] %}
                    {% assign collection_url = section.settings.button_url_2 | default: collection.url %}
                <div class="brewer">
                    <h3> {{ collection.title }} </h3>
                    <div class="brewer-img">
                        <a href="{{ collection_url }}">
                            {% if section.settings.show_custom_image_2 %}
                                {% render 'image-snippet', image: section.settings.collection_image_2, lazyload: 'lazy', width: '378', height: '233' %}
                            {% else %}
                                {% render 'image-snippet', image: collection.image, lazyload: 'lazy', width: '378', height: '233' %}
                            {% endif %}    
                        </a>
                        <div class="cofe-mkr">
                            {% render 'image-snippet-np', image: section.settings.collection_image_bottom_2 , imageURL: true, lazyload: 'lazy'  %}
                        </div>

                    </div>

                    {% render 'anchor-snippet', image: true, button_text: section.settings.button_text_2, button_url: section.settings.button_url_2 | default: collection.url, class: 'btn-primary flex align-center justify-center gap-10' %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>


{% schema %}
    {
        "name" : "Explore By Solutions",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Explore By Solutions"
            },
            {
                "type": "header",
                "content": "Collection 1"
            },
            {
                "type": "collection",
                "id": "collection_1",
                "label": "Collection"
            },
            {
                "type": "checkbox",
                "id": "show_custom_image_1",
                "label": "Show Custom Image",
                "default": true
            },
            {
                "type": "inline_richtext",
                "id": "show_custom_text_1",
                "label": "Show Custom Text"
            },
            {
                "type": "image_picker",
                "id": "collection_image_1",
                "label": "Collection Image"
            },
            {
                "type": "text",
                "id": "button_text_1",
                "label": "Button Text",
                "default": "Shop Grinders"
            },
            {
                "type": "url",
                "id": "button_url_1",
                "label": "Custom Button URL"
            },
            {
                "type": "header",
                "content": "Collection 2"
            },
            {
                "type": "collection",
                "id": "collection_2",
                "label": "Collection"
            },
            {
                "type": "checkbox",
                "id": "show_custom_image_2",
                "label": "Show Custom Image",
                "default": true
            },
            {
                "type": "image_picker",
                "id": "collection_image_2",
                "label": "Collection Image"
            },
            {
                "type": "text",
                "id": "button_text_2",
                "label": "Button Text",
                "default": "Shop Grinders"
            },
            {
                "type": "url",
                "id": "button_url_2",
                "label": "Custom Button URL"
            },
            {
                "type": "image_picker",
                "id": "collection_image_bottom_2",
                "label": "Bottom Image"
            }
        ],
        "blocks": [
            {
                "type": "feature",
                "name": "Feature",
                "settings": [
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text",
                        "default": "placeholder text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name" : "Explore By Solutions"
            }
        ]
    }
{% endschema %}