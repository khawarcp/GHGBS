<section class="brand">
    
        <div class="brand-content">
            {% if section.settings.heading != blank %}                
                <h2> {{ section.settings.heading }} </h2>
            {% endif %}
            {% if section.settings.subheading != blank %}                
                <p> {{ section.settings.subheading }} </p>
            {% endif %}

            <div class="owl-slider">
                <div id="featuredcarousel" class="featured owl-carousel">
                    {% for block in section.blocks %}
                        {% case block.type %}
                               {% when 'brand' %}
                                {% if block.settings.brand_image != blank %}
                                    <div class="item">
                                        <a href="{{ block.settings.url | default: "#." }}" class="brand-card">
                                            <div class="brand-logo">
                                                {% render 'image-snippet', image: block.settings.brand_image, lazyload: 'lazy' %}
                                            </div>
                                           <div class="brand-arrow">
                                            <p> {{ block.settings.brand_name }} </p>
                                            {% render 'image-snippet-np', image: 'tone-arrow.svg' , assetURL: true, lazyload: 'lazy', width: '16' %}
                                           </div>
                                            {% if block.settings.display_label %}                                                
                                                <div class="dstributor flex">
                                                    {% render 'image-snippet-np', image: 'no-1.svg' , assetURL: true, lazyload: 'lazy' %}
                                                    <p>#1 DISTRIBUTOR</p>
                                                </div>
                                            {% endif %}
                                        </a>
                                    </div> 
                                {% endif %}
                     {% endcase %}
                 {% endfor %}
                </div>
            </div>
        </div>
  
</section>

{% schema %}
    {
        "name": "Brands",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Featured Brands"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading",
                "default": "Browse a full range of products from leading brands."
            }
        ],
        "blocks": [
            {
                "type": "brand",
                "name": "Brand",
                "settings": [
                    {
                        "type": "checkbox",
                        "id": "display_label",
                        "label": "Show Distributor Label",
                        "default": false
                    },
                    {
                        "type": "image_picker",
                        "id": "brand_image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "brand_name",
                        "label": "Name",
                        "default": "Brand Name"
                    },
                    {
                        "type": "url",
                        "id": "url",
                        "label": "URL"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Brands"
            }
        ]
    }
{% endschema %}