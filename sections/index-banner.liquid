<section class="home-banner flex align-center justify-center"
style="background-image: url('{{ section.settings.background | image_url }}');">
<div class="container" reveal-on-scroll>
    <div class="banner-cntnt">
        <div class="banner-hed">
            {% if section.settings.heading != blank %}                
                <h1>{{ section.settings.heading }}</h1>
            {% endif %}
            {% if section.settings.subheading != blank %}                
                <h2>{{ section.settings.subheading }}</h2>
            {% endif %}
            </div>
            {% if section.settings.text != blank %}                
                <p>{{ section.settings.text }}</p>
        {% endif %}

        <div class="banner-btn">
            {% render 'anchor-snippet', image: true, button_text: section.settings.button_text, button_url: section.settings.button_url, class: 'btn-primary flex align-center justify-center gap-10' %}
        </div>
    </div>

    <div class="banner-logo">
        {% render 'image-snippet-np', image: settings.banner_logo , imageURL: true, lazyload: 'eager'  %}
    </div>
    <div class="banner-aftr">
        {% render 'image-snippet', image: section.settings.bottom_image, lazyload: 'lazy'  %}
    </div>
</div>
</section>

{% schema %}
    {
        "name": "Banner",
        "settings": [        
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading",
                "default": "Solutions for the Specialty Coffee World"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Grinding & Brewing"
            },
            {
                "type": "inline_richtext",
                "id": "text",
                "label": "Text",
                "default": "We provide superior coffee equipment, decades of experience and genuine service and support to your coffee business."
            },
            {
                "type": "header",
                "content": "Images"
            },
            {
                "type": "image_picker",
                "id": "background",
                "label": "Background Image"
            },
            {
                "type": "image_picker",
                "id": "bottom_image",
                "label": "Bottom Iamge"
            },
            {
                "type": "header",
                "content": "Button"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text",
                "default": "Shop Grinders"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button URL"
            }
        ],
        "presets": [
            {
                "name": "Banner"
            }
        ]
    }
{% endschema %}