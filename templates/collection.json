{
  "sections": {
    "collection-banner": {
      "type": "collection-banner",
      "settings": {
        "show_custom_title": true,
        "show_collection_image": false,
        "custom_title": "Explore <br> The Brands",
        "image": "shopify:\/\/shop_images\/Collection_Banner.jpg",
        "background_image": "shopify:\/\/shop_images\/Collection_All_BG.jpg",
        "all_heading": "Grinding <br> &amp; Brewing",
        "info": "<p>We provide superior coffee equipment, decades of experience and genuine service and support to your coffee business.<\/p>"
      }
    },
    "collection-brand": {
      "type": "collection-brand",
      "settings": {
        "brand_logo": "{{ collection.metafields.custom.brand_logo.value }}",
        "show_collection_desc": false,
        "brand_info": "<p>{{ collection.metafields.custom.brand_description | metafield_tag }}<\/p>"
      }
    },
    "collection-video": {
      "type": "collection-video",
      "settings": {
        "subheading": "",
        "title": "",
        "video": "{{ collection.metafields.custom.video.value }}",
        "image": "{{ collection.metafields.custom.video_poster.value }}",
        "background_type": "full_width",
        "video_size": "small",
        "autoplay": false,
        "show_video_controls": false,
        "background": "rgba(0,0,0,0)",
        "text_color": "rgba(0,0,0,0)"
      }
    },
    "main": {
      "type": "main-collection",
      "settings": {
        "show_sort_by": true,
        "products_per_page": 50,
        "mobile_products_per_row": "1",
        "desktop_products_per_row": 3,
        "show_filters": true,
        "show_filter_group_name": true,
        "show_color_swatch": true,
        "open_first_filter_group": true,
        "filter_position": "always_visible",
        "promotion_position": "top",
        "promotion_height": "small",
        "show_cta": true
      }
    }
  },
  "order": [
    "collection-banner",
    "collection-brand",
    "collection-video",
    "main"
  ]
}
